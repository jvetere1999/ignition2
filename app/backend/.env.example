# Ignition API - Local Development Environment

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_ENVIRONMENT=development

# Database (PostgreSQL)
DATABASE_URL=postgres://ignition:ignition_dev@localhost:5432/ignition
DATABASE_POOL_SIZE=10

# Authentication
AUTH_COOKIE_DOMAIN=localhost
AUTH_SESSION_TTL_SECONDS=2592000

# OAuth providers (optional - fill in when provisioned)
# AUTH_OAUTH_GOOGLE_CLIENT_ID=
# AUTH_OAUTH_GOOGLE_CLIENT_SECRET=
# AUTH_OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8080/auth/callback/google
# AUTH_OAUTH_AZURE_CLIENT_ID=
# AUTH_OAUTH_AZURE_CLIENT_SECRET=
# AUTH_OAUTH_AZURE_REDIRECT_URI=http://localhost:8080/auth/callback/azure

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Storage (MinIO/R2)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_BUCKET=ignition
STORAGE_REGION=auto
STORAGE_ACCESS_KEY_ID=minioadmin
STORAGE_SECRET_ACCESS_KEY=minioadmin

# Logging
RUST_LOG=ignition_api=debug,tower_http=debug

# Application environment
APP_ENV=development

